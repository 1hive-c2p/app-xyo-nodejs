{
  "name": "@xyo-network/app-xyo-nodejs",
  "version": "0.2.23",
  "description": "The XYO application for running components on the XYO network",
  "main": "dist/index.js",
  "bin": {
    "xyo-start": "bin/start-node.js",
    "xyo-stop": "bin/stop-node.js"
  },
  "scripts": {
    "forever": "forever --max-old-space-size=4096 ./bin/start-forever.js",
    "start": "node --max-old-space-size=4096 ./bin/start-node.js start",
    "stop": "./bin/stop-node.js",
    "pretest": "yarn install",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "yarn lint",
    "build": "tsc",
    "license": "yarn license-checker --onlyAllow 'MIT;BSD-2-Clause;BSD-3-Clause;Apache-2.0;ISC;Unlicense;UNKNOWN;BSD*;CC0-1.0' --excludePackages 'colors@0.6.2'",
    "develop": "ts-node ./src/index.ts"
  },
  "types": "dist/index.d.ts",
  "author": "XYO Development Team",
  "license": "LGPL-3.0",
  "optionalDependencies": {
    "@xyo-network/sdk-archivist-nodejs": "^0.3.0-beta.0"
  },
  "dependencies": {
    "@types/graphql-type-json": "^0.1.3",
    "@xyo-network/sdk-base-nodejs": "^0.3.1",
    "@xyo-network/sdk-core-nodejs": "^0.61.19",
    "commander": "^2.19.0",
    "dotenv-expand": "^5.1.0",
    "enquirer": "^2.3.0",
    "forever": "^1.0.0",
    "graphql": "^14.2.1",
    "graphql-type-json": "^0.3.0",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.6",
    "@types/fs-extra": "^5.0.5",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.12",
    "@types/joi": "^14.3.1",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.8",
    "@xyo-network/config-tslint": "^0.1.31",
    "copyfiles": "^2.1.0",
    "jest": "^24.5.0",
    "license-checker": "^25.0.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.1",
    "typescript": "^3.4.5"
  }
}
