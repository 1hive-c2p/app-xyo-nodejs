{
  "name": "@xyo-network/app-xyo-nodejs",
  "version": "0.2.2",
  "description": "The XYO application for running components on the XYO network",
  "main": "dist/index.js",
  "bin": {
    "xyo-start": "bin/start-node.js",
    "xyo-stop": "bin/stop-node.js"
  },
  "scripts": {
    "forever": "forever --max-old-space-size=4096 ./bin/start-forever.js",
    "start": "node --max-old-space-size=4096 ./bin/start-node.js",
    "stop": "./bin/stop-node.js",
    "pretest": "yarn install",
    "lint": "tslint --config tslint.json --project tsconfig.json src/**/*.ts",
    "test": "yarn lint",
    "build": "tsc",
    "develop": "ts-node ./src/index.ts"
  },
  "types": "dist/index.d.ts",
  "author": "XYO Development Team",
  "license": "MIT",
  "dependencies": {
    "@xyo-network/attribution-request.node-network": "^0.55.8-alpha.0",
    "@xyo-network/base": "^0.55.8-alpha.0",
    "@xyo-network/crypto": "^0.55.8-alpha.0",
    "@xyo-network/errors": "^0.55.8-alpha.0",
    "@xyo-network/network": "^0.55.8-alpha.0",
    "@xyo-network/network.tcp": "^0.55.8-alpha.0",
    "@xyo-network/node-network": "^0.55.8-alpha.0",
    "@xyo-network/peer-connections": "^0.55.8-alpha.0",
    "@xyo-network/peer-interaction-handlers": "^0.55.8-alpha.0",
    "@xyo-network/peer-interaction-router": "^0.55.8-alpha.0",
    "@xyo-network/sdk-archivist-nodejs": "^0.2.47",
    "@xyo-network/storage.leveldb": "^0.55.8-alpha.0",
    "@xyo-network/utils": "^0.55.8-alpha.0",
    "commander": "^2.19.0",
    "dotenv-expand": "^5.1.0",
    "enquirer": "^2.3.0",
    "forever": "^1.0.0",
    "graphql": "^14.2.1",
    "joi": "^14.3.1",
    "js-yaml": "^3.12.1",
    "lodash": "^4.17.11",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.1",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.12.1",
    "@xyo-network/config-tslint": "^0.1.12",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.1",
    "typescript": "^3.4.4"
  }
}
